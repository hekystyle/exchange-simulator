datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Candle {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  open      Float
  close     Float
  high      Float
  low       Float
  timestamp DateTime
  pair      String
  interval  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([interval, pair, timestamp])
}
