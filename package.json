{
  "name": "exchange-simulator",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "repository": "git@github.com:hekystyle/exchange-simulator.git",
  "author": "Tomáš Heky Hekrla <tomas@heky.eu>",
  "license": "MIT",
  "packageManager": "yarn@3.5.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "build:server": "nest build -p tsconfig.build.json",
    "check-types": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "start": "NEST_DEBUG=1 && nest start",
